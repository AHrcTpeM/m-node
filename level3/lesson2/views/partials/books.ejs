<% if (search) {%>
    <div style="text-align: center;">
        По запросу: '<b style="color: green;"><%= search%></b>' , найдено книг: <b style="color: green;"><%= books.length%></b>&nbsp;&nbsp;<a href="/">Сброс</a> 
    </div> 
<% } %> 
<%
if (end > books.length) 
  end = books.length; 
for (let i = start; i < end; i++) {
    let id = books[i].book_id;
    let title = books[i].title;
    let author = books[i].author;
    let image = books[i].image;
%>
    <div data-book-id='<%= id%>' class="book_item col-xs-6 col-sm-3 col-md-2 col-lg-2">
        <div class="book">
            <a href="http://localhost:3000/book/<%= id%>"><img src="./images/<%= image%>" alt='<%= title%>'>
                <div data-title="<%= title%>" class="blockI" style="height: 46px;">
                    <div data-book-title="<%= title%>" class="title size_text"><%= title%></div>
                    <div data-book-author="<%= author%>" class="author"><%= author%></div>
                </div>
            </a>
            <a href="http://localhost:3000/book/<%= id%>">
                <button type="button" class="details btn btn-success">Читать</button>
            </a>
        </div>
    </div>
<% } %> 

